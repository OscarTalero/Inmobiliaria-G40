<div class="col-md-4 mx-auto">

<div class="card">
    <div class="card-header">
        <h3>Nueva Persona</h3>
    </div>
    <div class="card-body">
        <form action="/newperson" method="POST">
            <div>
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Ingrese su nombre" required autofocus> 
            </div>
            <div>
                <label for="correo" class="form-label">Email</label>
                <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo" required>
            </div>
           
                <button type="submit" class="btn btn-primary btn-block">Registrar</button>
           
        </form>
    </div>
</div>
    





</div>